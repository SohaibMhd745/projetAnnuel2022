<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.akm.front.AKMController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Connexion" />
    <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" style="-fx-max-width: 240px;">
        <TextField promptText="E-mail" fx:id="email"/>
        <PasswordField promptText="Mot de passe" fx:id="password"/>
        <Button alignment="CENTER" mnemonicParsing="false" onAction="#attemptLogin" text="Valider"/>
    </VBox>
</VBox>